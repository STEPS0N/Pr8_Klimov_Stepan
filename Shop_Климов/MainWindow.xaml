<Window x:Class="Shop_Климов.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Shop_Климов"
        mc:Ignorable="d"
        Title="MainWindow" Height="486" Width="800" MinHeight="486" MaxWidth="800">
    <Grid>
        <Label Content="Поиск товара:" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="18" Margin="10, 10, 1, 10"/>
        <TextBox x:Name="Search" HorizontalAlignment="Left" Margin="140,15,0,0" VerticalAlignment="Top" Width="172" Height="30" FontSize="18" TextChanged="Search_TextChanged"/>
        <ScrollViewer HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Hidden" Margin="0,60,0,0">
            <StackPanel x:Name="parent" Orientation="Horizontal">

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
